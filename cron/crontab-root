@daily       /usr/bin/pacman -Sy
@weekly      /bin/chown root:root /etc/passwd /etc/shadow /etc/group /etc/gshadow /etc/hostname /etc/locale.conf /etc/vconsole.conf /etc/localtime
@weekly      /bin/chmod 644 /etc/passwd /etc/group /etc/hostname /etc/locale.conf /etc/vconsole.conf /etc/localtime
@weekly      /bin/chmod 400 /etc/shadow /etc/gshadow
@weekly      /usr/bin/wget "http://winhelp2002.mvps.org/hosts.txt" -O /etc/hosts.blacklist && cp /etc/hosts.head /etc/hosts && cat /etc/hosts.blacklist >> /etc/hosts
@monthly     /usr/bin/pacman-optimize && /bin/sync
