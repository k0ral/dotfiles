[Unit]
Description=Xorg server at display 0
Requires=xorg.socket
After=xorg.socket

[Service]
#User=koral
Type=simple
SuccessExitStatus=0 1
#ExecStart=/usr/bin/xorg-launch-helper -nolisten tcp -noreset vt1
ExecStart=/usr/bin/Xorg :0 -nolisten tcp -noreset -verbose 2 "vt1"
Restart=always
RestartSec=10

[Install]
WantedBy=wm.target
