[Unit]
Description=Clean-up service

[Service]
Type=oneshot
EnvironmentFile=-%h/.config/systemd/user/environment
ExecStart=/run/current-system/sw/bin/chmod -R go-rwx %h/mail %h/papers %h/.gnupg
ExecStart=-/run/current-system/sw/bin/mv -u %h/Downloads/* %h/Desktop/* %h
ExecStart=-/run/current-system/sw/bin/rm -r %h/Downloads %h/Desktop
ExecStart=/run/current-system/sw/bin/detox -r %h/music
