[Unit]
Description=Emacs daemon

[Service]
Type=forking
EnvironmentFile=-/home/koral/.config/systemd/user/environment
ExecStart=/run/current-system/sw/bin/emacs --daemon
ExecStop=/run/current-system/sw/bin/emacsclient --eval "(progn (setq kill-emacs-hook 'nil) (kill-emacs))"
Restart=always
RestartSec=30
TimeoutStartSec=0

[Install]
WantedBy=default.target
