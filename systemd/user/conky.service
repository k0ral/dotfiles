[Unit]
Description=System Monitor for X
Requires=xorg.service
After=xorg.service

[Service]
EnvironmentFile=-/home/koral/.config/systemd/user/environment
ExecStart=/bin/sh -c "conky | dzen2 -fn 'Inconsolata:pixelsize=16' -ta r -expand l -dock"
Restart=always
RestartSec=30

[Install]
WantedBy=wm.target
