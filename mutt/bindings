# Key bindings
macro index,pager y "<change-folder>?<toggle-mailboxes>" "show incoming mailboxes list"

#       alias       alias menu
#       attach      attachment menu

# Directory browser
bind    browser y       exit
macro   browser q       '<exit><quit>'

#       compose     compose menu

# Message index
#bind    index   \cs         copy-message
bind    index   s           save-message
bind    index   b           bounce-message
bind    index   R           group-reply
bind    index   \cn         next-new
#bind    index   \c<down>    next-thread
#bind    index   \t          collapse-all
bind    index   <Space>     flag-message
macro   index   q           '<change-folder>?<toggle-mailboxes>'
macro   index   /           <search>~b
macro index,pager \co "<pipe-message> urlscan<Enter>" "call urlscan to extract URLs out of a message"

#       pgp         pgp menu
#       postpone    postponed message recall menu

# Generic keymap for all of the above
bind generic    \eOH        first-entry
bind generic    \eOF        last-entry
bind generic    <up>        previous-entry
bind generic    <down>      next-entry
bind generic    <pageup>    previous-page
bind generic    <pagedown>  next-page
bind generic    {           top-page
bind generic    }           bottom-page
#bind generic    <F5>        sync-mailbox

#       editor      line editor
# Text viewer
bind pager      e           exit
bind pager      s           save-message
bind pager      \t          next-unread
bind pager      b           bounce-message
bind pager      \eOH        top
bind pager      \eOF        bottom
bind pager      n           search-next
bind pager      R           group-reply
bind pager      <up>        previous-line
bind pager      <down>      next-line
bind pager      <left>      previous-entry
bind pager      <right>     next-entry

macro attach,compose \cb "<pipe-entry> urlscan<Enter>" "call urlscan to extract URLs out of a message"

