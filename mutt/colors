#color  element     foreground      background  [regex]
#color  normal      white           default

# Interface {{{
color   status      brightgreen     blue
color   search      brightyellow    red
color   message     brightyellow    default                 # Information message
color   error       brightred       default
color   markers     brightred       default
# }}}

# Mails list {{{
color   indicator   brightyellow    default
color   tree        red             default         # the thread tree in the index menu
color   index       brightwhite     default ~F      # important messages    ! flag - command "F"
color   index       green           default ~N      # nouveaux messages N flag - command "N"
color   index       magenta         default ~T      # tagged messages   * flag - command "t"
color   index       green           default ~U      # non-lu messages
color   index       red             default ~D      # messages supprimÃ©     D flag - comman
# }}}

# Headers {{{
color   hdrdefault  magenta         default
color   header      brightyellow    default     ^(From):
color   header      yellow          default     ^(To):
color   header      yellow          default     ^(Cc):
color   header      brightyellow    default     ^(Subject):
color   header      brightblue      default     ^(Date):
color   header      blue            default     ^(In-Reply-To):
# }}}

# Mail body {{{
color   quoted      brightred       default                 # quoted text, 1st quote level
color   quoted1     red             default                 # quoted text, 2nd quote level
color   quoted2     brightred       default            # quoted text, 3rd quote level
color   quoted3     red             default                  # quoted text, 4th quoet level
color   attachment  red             default
color   signature   red             default
# }}}

color   tilde       red             default

# Special {{{
color   body        green           default "(ftp|http|https)://[^ ]+"	# point out URLs
color   body        green           default [-a-z_0-9.]+@[-a-z_0-9.]+	# e-mail addresses
color   bold        brightwhite     default               # boldface text
color   underline   brightgreen     default         # underlined text
color   body        brightgreen     default " [;:]-*[)>(<|]"             # :-) etc
color   body        brightgreen     default " [;:][)>(<|]"               # :) etc...
# }}}

#color bold brightblue default               # boldface text
#color normal default default                # default


