#   Sidebar
set sidebar_width=24
set sidebar_visible=yes
set sidebar_delim=' | '
set sidebar_sort=yes


#   Color of folders with new mail
color sidebar_new yellow default

bind index \C<up>       sidebar-prev
bind index \C<down>     sidebar-next
bind index \C<return>   sidebar-open
bind pager \C<up>       sidebar-prev
bind pager \C<down>     sidebar-next
bind pager \C<return>   sidebar-open

# I don't need these.  just for documentation purposes.  See below.
# sidebar-scroll-up
# sidebar-scroll-down

# b toggles sidebar visibility
macro index h '<enter-command>toggle sidebar_visible<enter>'
macro pager h '<enter-command>toggle sidebar_visible<enter>'

# Mario Holbe suggests:
# macro index b '<enter-command>toggle sidebar_visible<enter><refresh>'
# macro pager b '<enter-command>toggle sidebar_visible<enter><redraw-screen>'
