# Sidebar
set sidebar_width=24
set sidebar_visible=yes
set sidebar_delim=' | '
#set sidebar_sort=yes

# Color of folders with new mail
color sidebar_new yellow default

#bind index,pager z sidebar-prev
#bind index,pager s sidebar-next
bind index,pager H sidebar-open

# Toggle sidebar visibility
macro index \t '<enter-command>toggle sidebar_visible<enter>'
macro pager \t '<enter-command>toggle sidebar_visible<enter>'
