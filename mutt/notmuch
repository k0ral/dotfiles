set nm_default_uri = "notmuch:///home/koral/mail"
#set nm_exclude_tags = ""
#set nm_hidden_tags = ""
set nm_query_type = "threads"
set record=+sent
set nm_record = yes
set nm_record_tags = "-inbox,sent"

set spoolfile = "notmuch://?query=tag:inbox"
set virtual_spoolfile=yes
set vfolder_format = "%6n(%6N) %f"

virtual-mailboxes "unread/todo" "notmuch:///home/koral/mail?query=tag:unread or tag:todo"
virtual-mailboxes "inbox" "notmuch:///home/koral/mail?query=tag:inbox"
virtual-mailboxes "sent" "notmuch:///home/koral/mail?query=tag:sent"
virtual-mailboxes "invoice" "notmuch:///home/koral/mail?query=tag:invoice"
virtual-mailboxes "other" "notmuch:///home/koral/mail?query=NOT tag:inbox and NOT tag:sent and NOT tag:unread and NOT tag:invoice"

bind index c vfolder-from-query
bind index,pager t modify-labels

macro index I "<modify-labels>invoice -inbox -unread\n" "Add invoice tag"
macro index T "<modify-labels>todo\n" "Add todo tag"
