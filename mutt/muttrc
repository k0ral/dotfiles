# {{{ Paths
set folder=~/mail                   # Mailboxes folder (must be set _before_ any other path)
set alias_file=~/.config/mutt/aliases
set header_cache=~/.config/mutt/.hcache
set message_cachedir=~/.config/mutt/.mcache
#set mailcap_path="~/.mutt/mailcap:/usr/local/share/mailcap"
#set mbox="~/Maildir/Inbox/"
#set mbox_type=Maildir
set postponed=+postponed
#set record=+outbox                  # Outgoing mail
set record=!
set spoolfile=+Inbox/               # Location for new mails
# }}}

# {{{ Sources
source ~/.config/mutt/abook
source ~/.config/mutt/alternates
#source ~/.config/mutt/aliases
source ~/.config/mutt/bindings
source ~/.config/mutt/colors
source ~/.config/mutt/headers
source ~/.config/mutt/hooks
source ~/.config/mutt/mailboxes
source ~/.config/mutt/mailing_lists
source ~/.config/mutt/pgp
source ~/.config/mutt/sidebar
# }}}

# {{{ SSL/TLS
set ssl_starttls = yes
set ssl_force_tls = yes
# }}}

# {{{ HTML mails
set implicit_autoview   # pager shows parts having a mailcap viewer
auto_view text/html  application/x-pgp-message
alternative_order text/plain text/html
# }}}

# Commands
set editor="/usr/bin/emacsclient -c"
#set query_command="abook --mutt-query '%s'"
#set sendmail="/usr/bin/msmtp --read-envelope-from"

# {{{ Charset/locale/encoding
unset allow_8bit                    # never do Q-P encoding on legal 8-bit chars
set allow_ansi                      # allow ANSI color codes in messages.
set locale="fr_FR.UTF-8"            # locale to use for printing time
set send_charset="utf-8"
# }}}

# {{{ Inhibit confirmation
unset confirmappend                 # Append to mailboxes
set delete=yes
set move=yes
unset wait_key
# }}}

# {{{ Pager
#set pager=less                     # some people prefer an external pager
set pager_context=4                 # no. of lines of context to give when scrolling
set pager_index_lines=6             # how many index lines to show in the pager
set pager_stop                      # don't move to the next message on next-page
# }}}

# {{{ Other
unset arrow_cursor
set autoedit                        # go to the editor right away when composing
unset beep
set copy=yes                        # always save a copy of outgoing messages
set edit_headers
unset fcc_attach                    # keep attachments in copies of sent messages?
set forward_quote
set help
set hidden_host                     # Hide host details
set include                         # always include messages when replying
unset markers                       # no ugly plus signs
set reply_to                        # always use reply-to if present
#set resolve                        # move to the next message when an action is performed
set reverse_alias                   # attempt to look up my names for people
set reverse_name                    # use my address as it appears in the message I am replying to
unset save_empty                    # remove files when no messages are left
set sig_dashes
set sleep_time=0
set strict_threads                  # don't thread by subject, but by "In-Reply-To"
set tilde
unset use_domain                    # don't qualify local addresses with $domain
unset user_agent
# }}}

# Print messages
set print=ask-yes                   # ask me if I really want to print messages
set print_command="/usr/bin/muttprint %s -p {PrinterName}"

# {{{ Sorting
set sort=threads                # primary sorting method
set sort_alias=alias            # sort alias file by alias
set sort_aux=reverse-date       # secondary sorting method
set sort_browser=reverse-date   # how to sort files in the dir browser
folder-hook "outbox" set sort=date
# }}}

# Format {{{
set attach_format="%4n %u%D%I %t %T %8s  %.40d%> %.7m/%.10M %10C"
set attribution="*** %n <%a> [%{%Y-%m-%d %H:%M:%S %Z}] ***"
set compose_format="New mail | Size: %l | Host: %h | Attachments: %a %>-"
set index_format="%4C  %Z  %[%m/%d/%g %H:%M]  %-15.15n  %s"
set status_format=" Host: %h | Box: %f %r | Msgs: %?M?%M/?%m %?n?| New: %n? %?d?| Del: %d? %?F?| Flag: %F? %?t?| Tag: %t? %?p?| Post: %p? %?b?| Inc: %b?| Size: %l | Sort: %s/%S %> %P "
#set pager_format="%-10.10i %[!%a %b %d %R]"
set pager_format="-%S- %-20.20f %s"
set folder_format="%N %t %f %> %15d"
# }}}


#   Mailboxes
mailboxes =outbox
