# MEMORY
${voffset -75} #
${goto 400}${color2}ROOT: #
${if_match ${fs_free_perc /} <= 10}${color ff0000}$else${if_match ${fs_free_perc /} >= 50}${color 00ff00}$else${color aaaa00}$endif$endif#
${fs_free /} $color3(${fs_type /})
#
${goto 400}${color2}HOME: #
${if_match ${fs_free_perc /home} <= 10}${color ff0000}$else${if_match ${fs_free_perc /home} >= 50}${color 00ff00}$else${color aaaa00}$endif$endif#
${fs_free /home} $color3(${fs_type /home})
#
${goto 400}$color2 RAM: #
${if_match $memperc >= 90}${color ff0000}$else${if_match $memperc <= 50}${color 00ff00}$else${color aaaa00}$endif$endif#
$memfree
#
${goto 400}${color2}SWAP: #
${if_match $swapperc >= 90}${color ff0000}$else${if_match $swapperc <= 50}${color 00ff00}$else${color aaaa00}$endif$endif#
$swapfree
#
